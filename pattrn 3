#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n=5;
    int c=2*n-1;
    int a=n-1;
    int b=n-1;
   for(int i=0;i<n;i++)
   {
       
       for(int j=0;j<c;j++)
       {
          if(j>=a&&j<=b)
          {
                cout<<"*";
            }
           
        else
        {
            cout<<" ";
        }
       }
       cout<<"\n";
       a--;b++;
   }
    return 0;
}
